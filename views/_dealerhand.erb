<h4>Frank's cards are:</h4>

<div class="well">

  <% if @player_turn %>
    <img src="/images/cards/cover.jpg" class="card_image">
    <%= get_image(session[:dealer_hand][1]) %>
  
  <% else %>
    <% session[:dealer_hand].each do |card| %>
      <%= get_image(card) %> 
    <% end %>
  <% end %>
 
</div>

<% if @dealer_turn %>
  <h4>The total value of the Frank's hand is: <%= calc_hand(session[:dealer_hand]) %></h4>
<% end %>
