<div id="player">
  
  <h4>You have <%= format("$%.2f",session[:player_wallet]) %> in the pot.</h4>
  
  <div class="well">
  	<h4><%= session[:player_name] %>'s cards are:</h4>
    <% session[:player_hand].each do |card| %>
      <%= get_image(card) %> 
    <% end %>

    <h4>The total value of your hand is: <%= calc_hand(session[:player_hand]) %></h4>
  
  </div>

  <% if session[:cur_bet] > 0 %>
    <h4>Your bet for this hand is $<%= session[:cur_bet] %>.</h4>
  <% end %>
  
  <% if @player_turn %>
    <div>
      <form id="hit_form" action='/hit' method='post'>
        <%= @hit_button %>
        <!-- input type='submit' value='Hit!' class='btn btn-warning'/ -->
      </form>

      <form id="stay_form" action='/stay' method='post'>
        <%= @stay_button %>
        <!-- input type='submit' value='Stay!' class='btn btn-success'/ -->
      </form>
    </div>
  <% end %>

</div>
